{% extends 'base.html.twig' %}

{% block title %}SymphArt Articles{% endblock %}

{% block body %}
  {% if products %}
    <table id="articles" class="table table-striped">
      <thead>
        <tr>
          <th>Product Title</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
        {% for product in products %}
          <tr>
            <td>{{ product.title }}</td>
            <td>
              <a href="/product/{{ product.id }}" class="btn btn-dark">Покажи имформация</a>
              <!--<a href="/product/edit/{{ product.id }}" class="btn btn-light">Edit</a>-->
              <!--<a href="#" class="btn btn-danger delete-product" data-id="{{ product.id }}">Delete</a>-->
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>No articles to display</p>
  {% endif %}
{% endblock %}

{% block javascripts %}
  <script src="/js/main.js"></script>
{% endblock %}